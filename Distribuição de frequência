titulo = str('coletor de dados').upper()
print(f'{titulo:-^30}')

tipo_de_dados = input('Tipo de dados coletados: ')
coleta_de_dados = int(input('Adicione os dados coletados: '))
adicionar_mais_dados = input('Quer adicionar mais dados? \n[S/N]:').upper()

dados = [coleta_de_dados]
if adicionar_mais_dados == 'S':
  while adicionar_mais_dados == 'S':
    mais_dados = int(input('Adicione os dados coletados: '))
    dados.append(mais_dados)
    adicionar_mais_dados = input('Quer adicionar mais dados? \n[S/N]:').upper()   

print(f'Os dados que você colheu são :{dados})
