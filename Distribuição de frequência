tipo_de_dados = input('Informe o tipo de dados coletados:\n')
quantidade_de_dados = int(input('Informe a quantidade de dados coletados:\n'))
print()

dados = []
while True:
  mais_dados = (int(input('Adicione o dado coletado:\n')))
  dados.append(mais_dados)
  opção = input('Quer adicionar mais?\n[S/N]: ').upper()
  if opção == 'N':
    break
print(dados)
